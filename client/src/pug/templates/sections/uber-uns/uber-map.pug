      +e.top 
        +e.title.title.H3 ADRESS
        +e.subtitle.P #[span(class="uber-map-wrapper__span") GOOGLE MAPS |] MAPS
      +e.bottom 
        +e.column-location
          +e.adress-wrapper 
            +e.adress-category 
              +e.image-wrapper 
                +e.image.IMG(src="../../../static/icons/uber-uns/location.svg")
              +e.location-info 
                +e.text.text.--xs.--medium.P LUXED Beleuchtungen GmbH  
                +e.text.text.--xs.--medium.P Benzburweg 18A
                +e.text.text.--xs.--medium.P CH- 4410 Liestal
          +e.adress-wrapper 
            +e.adress-category 
              +e.image-wrapper 
                +e.image.IMG(src="../../../static/icons/uber-uns/phone.svg")
              +e.location-info 
                +e.text.text.--xs.--medium.A(href="tel:+41619030380") +41 61 903 03 80 
                +e.text.text.--xs.--medium.A(href="tel:+41619030380") +41 61 903 03 80
          +e.adress-wrapper 
            +e.adress-category 
              +e.image-wrapper 
                +e.image.IMG(src="../../../static/icons/uber-uns/mail.svg")
              +e.location-info 
                +e.text.text.--xs.--medium.A(href="mailto: TESTTEST@gmail.com") TESTTEST@gmail.com
          +e.adress-wrapper 
            +e.adress-category 
              +e.image-wrapper 
                +e.image.IMG(src="../../../static/icons/uber-uns/clock.svg")
              +e.location-info 
                +e.top-info
                  +e.text.text.--xs.--medium.P Mo – Do   
                  +e.text.text.--xs.--medium.P 08.00 – 12.00 Uhr
                  +e.text.text.--xs.--medium.P 13.00 – 17.30 Uhr
